{
  "name": "foodhub-website",
  "version": "1.0.6",
  "private": true,
  "type": "module",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:gh": "./scripts/build-gh-pages.sh",
    "build:netlify": "NEXT_PUBLIC_BASE_PATH='' next build",
    "export": "next build",
    "start": "next start",
    "deploy": "yarn build:gh && git add -f out/ && git commit -m 'Deploy to GitHub Pages' && git subtree push --prefix out origin gh-pages",
    "test:deploy": "yarn build:gh && npx serve out -l 3000",
    "test:netlify": "yarn build:netlify && npx serve out -l 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "analyze": "cross-env ANALYZE=true next build",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "clean": "rm -rf .next out dist",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "release": "./scripts/release.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next/bundle-analyzer": "^15.5.4",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "isotope-layout": "^3.0.6",
    "next": "^14.0.4",
    "next-seo": "^6.8.0",
    "next-sitemap": "^4.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.63.0",
    "react-icons": "^5.3.0",
    "sass": "^1.69.5",
    "sharp": "^0.33.1",
    "typescript": "^5.3.3",
    "yup": "^1.7.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.4",
    "@types/isotope-layout": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "cross-env": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
